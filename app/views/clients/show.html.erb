<div class="center">


  <div class="alert alert-info" role="alert"><h3><p class="text-center">
    <%= @client.phone %>
  </p></h3></div>

  <p>
    <strong>ФИО:</strong>
    <%= @client.name%>
  </p>

  <p>
    <strong>Скидка (%):</strong>
    <%= @client.discount %>
  </p>

  <%= link_to 'Изменить', edit_client_path(@client) %> |
  <%= link_to 'Назад', url_for(:back) %>
</div>


<h2 class="text-center">История покупок</h2>
<table class="table">
  <thead>
  <tr class="info">
    <th>ID</th>
    <th>Название</th>
    <th>Закупка $</th>
    <th>Цена</th>
    <th>Закреплен</th>
    <th>Статус</th>
    <th></th>

  </tr>
  </thead>

  <tbody>
  <% @client.items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.purchase %></td>
      <td><%= item.retail %></td>
      <td><%= item.store.name %></td>
      <td><%= item.status.name %></td>
      <td><%= link_to 'Просмотреть страницу товара', item %></td>

    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_client_path(@client) %> |
<%= link_to 'Back', clients_path %>
