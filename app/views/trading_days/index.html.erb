<p id="notice"><%= notice %></p>

<h1>Trading Days</h1>
<a href="<%= new_trading_day_path %>"><button type="button" class="btn btn-primary">Создать торговый день</button></a>
<br><br>
<table class="table">
  <thead>
    <tr class="info">
      <th>Day</th>
      <th>Month</th>
      <th>Year</th>
      <th>Store</th>
      <th>User</th>
      <th>Статус</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trading_days.each do |trading_day| %>
      <tr>
        <td><%= trading_day.day %></td>
        <td><%= trading_day.month %></td>
        <td><%= trading_day.year %></td>
        <td><%= trading_day.store.name %></td>
        <td><%= trading_day.user.email %></td>
        <td><%= trading_day.status %></td>
        <td><%= link_to 'Show', trading_day %></td>
        <td><%= link_to 'Edit', edit_trading_day_path(trading_day) %></td>
        <td><%= link_to 'Destroy', trading_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

