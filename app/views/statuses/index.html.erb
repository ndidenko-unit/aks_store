

<h1>Статусы товаров</h1>
<a href="<%= new_status_path %>"><button type="button" class="btn btn-primary">Добавить новый статус</button></a>
<br><br>
<table class="table">
  <thead>
  <tr class="info">
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

