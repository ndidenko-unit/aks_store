<p id="notice"><%= notice %></p>

<h1>Товары</h1>
<a href="<%= new_item_path %>"><button type="button" class="btn btn-primary">Добавить новый товар</button></a>
<br><br>
<table class="table">
  <thead>
  <tr class="info">
      <th>ID</th>
      <th>Название</th>
      <th>Закупка $</th>
      <th>Цена</th>
      <th>Закреплен</th>
      <th>Статус</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.purchase %></td>
        <td><%= item.retail %></td>
        <td><%= item.store.name %></td>
        <td><%= item.status.name %></td>
        <td><%= link_to 'Просмотреть', item %></td>
        <td><%= link_to 'Изменить', edit_item_path(item) %></td>
        <td><%= link_to 'Удалить', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

