
<%= form_with(model: item, local: true, html: {class: 'navbar-form'}) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Название" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :purchase, "Закупочная цена" %>
    <%= form.text_field :purchase, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :retail, "Цена продажи" %>
    <%= form.text_field :retail, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :store_id, "Закрепить за" %>
    <%= form.collection_select :store_id, Store.all, :id, :name %>
  </div>

  <div class="form-group">
    <%= form.label :status_id, "Статус товара" %>
    <%= form.collection_select :status_id, Status.all, :id, :name %>
  </div>

  <div class="form-group">
    <%= form.submit "Сохранить", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>


